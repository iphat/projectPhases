<% layout("layouts/boilerplate") %>
<body>
    <h3>All listings</h3>
    <!-- <form method="GET" action="/listings/new">
        <button>Create New Listing</button>
    </form> -->
<!-- row - makes the card into row form  -->
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let listing of allListings) {%>
            <!-- col - makes the card into colmns form -->
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card col" >
                    <img src="<%=listing.image%>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                    
                    <div class="card-img-overlay"> ABCD </div>
    
                    <div class="card-body">
                       <p class="card-text">
                          <b><%= listing.title %></b><br>
                          <%= listing.price %> / night<br>
                       </p>
                    </div>
                    
                </div>
            </a>
        <%}%>
    </div>

</body>


